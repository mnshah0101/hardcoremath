<% layout('./layouts/boilerplate') %>
    <div class="container">
        <h1 class="text-center text-white">Create Problem</h1>
        <div class="row col-12 d-flex justify-content-center text-white">
            <form action="/problem/create" method="POST" class="col-6">
                <div class="form-group create-form-div">
                    <label for="title">Problem Title:</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>

                <div class="form-group create-form-div">
                    <label for="problem">Problem:</label>
                    <textarea class="form-control" id="problem" name="problem" required></textarea>
                </div>

                <div class="form-group create-form-div">
                    <label for="month">Month:</label>
                    <input type="number" class="form-control" id="month" name="month" min="1" max="12" required>
                </div>

                <div class="form-group create-form-div">
                    <label for="day">Day:</label>
                    <input type="number" class="form-control" id="day" name="day" min="1" max="31" required>
                </div>

                <div class="form-group create-form-div">
                    <label for="year">Year:</label>
                    <input type="number" class="form-control" id="year" name="year" min="1900" max="9999" required>
                </div>
                <div class="form-group create-form-div">
                    <label for="difficulty">difficulty:</label>
                    <input type="number" class="form-control" id="difficulty" name="difficulty" min="0" max="5"
                        required>
                </div>

                <div class="form-group create-form-div">
                    <label for="image">Image Link:</label>
                    <input type="text" class="form-control" id="image" name="image" required>
                </div>

                <button type="submit" class="btn btn-primary create-form-div">Submit</button>
            </form>
        </div>
    </div>

    <div class="d-flex flex-column justify-content-center ">
        <h2 class="text-white">Queue</h2>
        <table id="create_form_table" class="text-white">
            <tr>
                <th>Name</th>
                <th>Problem</th>
                <th>Date</th>
                <th>Image</th>

            </tr>
            <% problems.forEach((problem)=> { %>
                <tr>
                    <td>
                        <%= problem.problemTitle %>
                    </td>
                    <td>
                        <%= problem.problem %>
                    </td>
                    <td>
                        <%= problem.date %>
                    </td>
                    <td>
                        <img src="<%= problem.image %>" alt="" style="width: 200px;">

                    </td>
                </tr>
                <% }); %>
        </table>
    </div>